{
  "$schema": "https://claude.ai/schemas/claude-code-settings.json",
  "model": "opusplan",
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(npm run:*)",
      "Bash(pnpm:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(tree:*)",
      "Bash(ls:*)",
      "Bash(wc:*)",
      "Read(**/*)",
      "Edit(bidflow/**/*)",
      "Edit(src/**/*)",
      "Edit(types/**/*)",
      "Edit(.claude/**/*)",
      "Write(bidflow/**/*)",
      "Write(src/**/*)",
      "Write(types/**/*)",
      "Write(.claude/**/*)",
      "mcp__github__*"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/credentials*)",
      "Bash(rm -rf /)"
    ]
  },
  "env": {},
  "cleanupPeriodDays": 14,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true",
            "timeout": 10000
          }
        ]
      }
    ],
    "PreCommit": [
      {
        "type": "command",
        "command": "npm run typecheck 2>&1 | tail -20",
        "timeout": 60000
      },
      {
        "type": "command",
        "command": "npm run lint 2>&1 | tail -20",
        "timeout": 30000
      }
    ]
  }
}
