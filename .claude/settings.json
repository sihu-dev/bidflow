{
  "$schema": "https://claude.ai/schemas/claude-code-settings.json",
  "version": "2.1",
  "model": "opusplan",
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(npm run:*)",
      "Bash(pnpm:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(tree:*)",
      "Bash(ls:*)",
      "Bash(wc:*)",
      "Read(**/*)",
      "Edit(bidflow/**/*)",
      "Edit(types/**/*)",
      "Write(bidflow/**/*)",
      "Write(types/**/*)",
      "mcp__github__*"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/credentials*)",
      "Bash(rm -rf /)"
    ]
  },
  "env": {
    "NODE_ENV": "development"
  },
  "alwaysThinkingEnabled": true,
  "cleanupPeriodDays": 14,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true",
            "timeout": 10000
          }
        ]
      }
    ]
  },
  "project": {
    "name": "BIDFLOW",
    "description": "입찰 자동화 시스템 - 제조업 SME 맞춤 (IO block)",
    "type": "next-app",
    "framework": "next-15"
  },
  "skills": {
    "enabled": true,
    "autoDiscover": true,
    "available": [
      "bid-automation",
      "security-review",
      "api-integration"
    ]
  },
  "commands": {
    "enabled": true,
    "autoComplete": true,
    "available": [
      "bid",
      "api",
      "security"
    ]
  },
  "agents": {
    "enabled": true,
    "available": [
      "bid-matcher",
      "proposal-writer",
      "security-auditor"
    ]
  },
  "context": {
    "requiredFiles": [
      "CLAUDE.md",
      ".forge/BID_AUTOMATION_SPEC.md"
    ],
    "optionalFiles": [
      ".forge/TECH_ARCHITECTURE.md",
      ".forge/UI_DESIGN_SPEC.md"
    ]
  },
  "techStack": {
    "frontend": ["next.js@15", "typescript@5", "tailwindcss"],
    "backend": ["supabase", "upstash-redis"],
    "apis": ["ted-api", "g2b-api", "sam-api"]
  },
  "performance": {
    "parallelTools": true,
    "cacheResults": true,
    "maxConcurrentTasks": 5
  }
}
