# ============================================================================
# BIDFLOW 환경 변수
# ============================================================================

# Node 환경
NODE_ENV=development

# Supabase (필수)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Claude AI (필수)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Upstash Redis - Rate Limiting (필수)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# CSRF 보호 (필수 - 32자 이상)
CSRF_SECRET=your-32-character-secret-key-here

# 앱 URL
NEXT_PUBLIC_APP_URL=http://localhost:3010

# ============================================================================
# 해외 입찰 플랫폼 API (선택)
# ============================================================================

# EU TED API (공개 API - 키 불필요)
# https://ted.europa.eu/en/about-ted/api

# US SAM.gov API (https://api.sam.gov 에서 발급)
SAM_GOV_API_KEY=

# ============================================================================
# 공공 데이터 API (선택)
# ============================================================================

# 나라장터 API (공공데이터포털에서 발급)
NARA_JANGTO_API_KEY=

# 한전 API
KEPCO_API_KEY=

# 수자원공사 API
KWATER_API_KEY=

# KOTRA API
KOTRA_API_KEY=

# ============================================================================
# 알림 (선택)
# ============================================================================

# 이메일 (Resend - https://resend.com)
RESEND_API_KEY=
EMAIL_FROM=BIDFLOW <noreply@bidflow.io>

# 카카오 알림톡
KAKAO_ALIMTALK_API_KEY=
KAKAO_ALIMTALK_SENDER_KEY=
KAKAO_ALIMTALK_API_URL=https://api-alimtalk.kakao.com/v2

# Slack Webhook
SLACK_WEBHOOK_URL=

# ============================================================================
# 모니터링 (선택)
# ============================================================================

# Sentry (https://sentry.io)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Vercel Analytics (자동)
# VERCEL_ANALYTICS_ID=

# ============================================================================
# Inngest (워크플로우 스케줄링)
# ============================================================================

INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# ============================================================================
# 보안 설정 (프로덕션)
# ============================================================================

# Mock Auth 비활성화 (프로덕션에서 필수)
ALLOW_MOCK_AUTH=false
